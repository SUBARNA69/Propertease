@model EsewaPaymentViewModel

<div class="max-w-lg mx-auto mt-10">
    <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="text-center mb-4">
            <h3 class="text-2xl font-semibold text-gray-700">eSewa Payment</h3>
        </div>
        <form action="@Model.PaymentUrl" method="POST" class="space-y-4">
            <input type="hidden" name="amount" value="@Model.Amount">
            <input type="hidden" name="tax_amount" value="0.00">
            <input type="hidden" name="total_amount" value="@Model.TotalAmount">
            <input type="hidden" name="transaction_uuid" value="@Model.TransactionUuid">
            <input type="hidden" name="product_code" value="@Model.ProductCode">
            <input type="hidden" name="product_service_charge" value="@Model.ProductServiceCharge">
            <input type="hidden" name="product_delivery_charge" value="0.00">
            <input type="hidden" name="success_url" value="@Model.SuccessUrl">
            <input type="hidden" name="failure_url" value="@Model.FailureUrl">
            <input type="hidden" name="signed_field_names" value="@Model.SignedFieldNames">
            <input type="hidden" name="signature" value="@Model.Signature">

            <div class="flex justify-center">
                <button type="submit" class="w-full bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700 transition-all">
                    Pay with eSewa
                </button>
            </div>
        </form>
    </div>
</div>

<script>
