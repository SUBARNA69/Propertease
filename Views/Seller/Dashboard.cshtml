@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Propertease Dashboard</title>
    <!-- Tailwind and Flowbite CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Main Content -->
        <main class="flex-1 p-6">
            <!-- Header -->
            <div class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-2xl font-semibold">Welcome back, Sarah!</h1>
                    <p class="text-gray-600">Here's what's happening with your properties</p>
                </div>
                <a asp-action="AddProperty" asp-controller="Seller" class="px-4 py-2 bg-blue-600 text-white rounded shadow hover:bg-blue-500">
                    + Add New Listing
                </a>
            </div>

            <!-- Stats Cards -->
            <div class="grid grid-cols-4 gap-4 mb-8">
                <div class="bg-white p-4 rounded shadow">
                    <h3 class="text-gray-600">Total Listings</h3>
                    <p class="text-2xl font-bold">24</p>
                </div>
                <div class="bg-white p-4 rounded shadow">
                    <h3 class="text-gray-600">Pending Approvals</h3>
                    <p class="text-2xl font-bold">3</p>
                </div>
                <div class="bg-white p-4 rounded shadow">
                    <h3 class="text-gray-600">New Inquiries</h3>
                    <p class="text-2xl font-bold">12</p>
                </div>
                <div class="bg-white p-4 rounded shadow">
                    <h3 class="text-gray-600">Active Properties</h3>
                    <p class="text-2xl font-bold">18</p>
                </div>
            </div>

            <!-- Performance Overview -->
            <div class="bg-white p-6 rounded shadow mb-8">
                <h2 class="text-lg font-semibold mb-4">Performance Overview</h2>
                <div class="h-40 bg-gray-100 rounded flex items-center justify-center">
                    <span class="text-gray-400">Property Views Graph</span>
                </div>
            </div>

            <!-- Bottom Row -->
            <div class="grid grid-cols-3 gap-4">
                <!-- Real Estate Tips -->
                <div class="bg-white p-6 rounded shadow">
                    <h2 class="text-lg font-semibold mb-4">Real Estate Tips</h2>
                    <div class="space-y-4">
                        <div>
                            <h3 class="text-gray-600 font-semibold">Optimize Your Listings</h3>
                            <p class="text-gray-500 text-sm">Use high-quality photos and detailed descriptions to attract more buyers.</p>
                        </div>
                        <div>
                            <h3 class="text-gray-600 font-semibold">Market Trends</h3>
                            <p class="text-gray-500 text-sm">Stay updated with local market trends to price your properties competitively.</p>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="bg-white p-6 rounded shadow">
                    <h2 class="text-lg font-semibold mb-4">Recent Activity</h2>
                    <ul class="space-y-4 text-gray-600 text-sm">
                        <li>New Inquiry for 123 Main St <span class="text-gray-400">2 hours ago</span></li>
                        <li>Listing approved: 456 Oak Ave <span class="text-gray-400">5 hours ago</span></li>
                        <li>Price updated on 789 Pine Rd <span class="text-gray-400">1 day ago</span></li>
                    </ul>
                </div>

                <!-- Important Alerts -->
                <div class="bg-white p-6 rounded shadow">
                    <h2 class="text-lg font-semibold mb-4">Important Alerts</h2>
                    <ul class="space-y-4 text-gray-600 text-sm">
                        <li>Listing Expiring Soon: 789 Pine Rd - <span class="text-red-500">3 days left</span></li>
                        <li>Document Update Required: Please update property tax info</li>
                    </ul>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
