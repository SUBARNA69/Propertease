<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Property Form with Mapbox</title>

    <!-- Mapbox GL JS CSS -->
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.9.0/mapbox-gl.css" rel="stylesheet" />

    <!-- Mapbox GL JS JavaScript -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.9.0/mapbox-gl.js"></script>
</head>
<body>
<div class="flex justify-center">
    <form action="@Url.Action("AddProperty", "Seller")" method="post" enctype="multipart/form-data" class="space-y-6 p-8 bg-gray-50 rounded-lg shadow-md max-w-lg w-full">
        <!-- Property Type -->
        <div>
            <label for="PropertyType" class="block text-sm font-medium text-gray-700">Property Type</label>
            <select id="PropertyType" name="PropertyType" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                <option value="House">House</option>
                <option value="Apartment">Apartment</option>
                <option value="Land">Land</option>
            </select>
        </div>

        <!-- Property Title -->
        <div>
            <label for="Title" class="block text-sm font-medium text-gray-700">Property Title</label>
            <input id="Title" name="Title" type="text" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter property title">
        </div>

        <!-- Price -->
        <div>
            <label for="Price" class="block text-sm font-medium text-gray-700">Price</label>
            <input id="Price" name="Price" type="text" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="$0.00">
        </div>

        <!-- Description -->
        <div>
            <label for="Description" class="block text-sm font-medium text-gray-700">Description</label>
            <textarea id="Description" name="Description" rows="4" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Describe your property"></textarea>
        </div>

        <!-- Location Details -->
        <div class="grid grid-cols-2 gap-4">
            <div>
                <label for="District" class="block text-sm font-medium text-gray-700">District</label>
                <input id="District" name="District" type="text" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="District">
            </div>
            <div>
                <label for="City" class="block text-sm font-medium text-gray-700">City</label>
                <input id="City" name="City" type="text" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="City">
            </div>
            <div>
                <label for="Province" class="block text-sm font-medium text-gray-700">State</label>
                <input id="Province" name="Province" type="text" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="State">
            </div>
            <!-- New: Road Access Dropdown -->
            <div>
                <label for="RoadAccess" class="block text-sm font-medium text-gray-700">Road Access</label>
                <select id="RoadAccess" name="RoadAccess" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </div>
        </div>

            <!-- Map Section: Location Selection -->
            <div>
                <label for="Location" class="block text-sm font-medium text-gray-700">Location</label>
                <div id="map" style="height: 300px; width: 100%;" class="mt-2 rounded-lg"></div>
                <input type="hidden" id="Latitude" name="Latitude">
                <input type="hidden" id="Longitude" name="Longitude">
            </div>
        <!-- Property Specific Fields -->
        <div id="property-specific-fields"></div>

            <!-- 3D Model Upload -->
            <div id="3d-model-upload" class="hidden">
                <label for="ThreeDModel" class="block text-sm font-medium text-gray-700">Upload 3D Model</label>
                <input id="ThreeDModel" name="ThreeDModel" type="file" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" accept=".obj,.fbx,.glb">
                <p class="text-xs text-gray-500">Supported formats: .obj, .fbx, .glb</p>
            </div>
        <!-- Photo Upload -->
        <div>
            <label for="photo" class="block text-sm font-medium text-gray-700">Upload Photos</label>
            <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg">
                <div class="space-y-1 text-center">
                    <!-- File Input -->
                    <input id="photo" name="photo" type="file" multiple class="sr-only" accept=".jpg,.jpeg,.png,.gif">
                    <label for="photo" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                        <span>Upload files</span>
                    </label>
                    <p class="text-xs text-gray-500">PNG, JPG, GIF up to 5MB</p>
                </div>
            </div>
            <!-- Preview Uploaded Images -->
            <div id="image-preview" class="mt-4 grid grid-cols-3 gap-2"></div>
            <!-- Validation Message -->
            <span class="text-sm text-red-600">@Html.ValidationMessage("photo")</span>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-between">
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-600">Submit Listing</button>
        </div>
    </form>
</div>

<script>

    document.addEventListener('DOMContentLoaded', function () {
             document.getElementById('PropertyType').addEventListener('change', function() {
                const propertyType = this.value;
                if (propertyType === 'House' || propertyType === 'Apartment') {
                    document.getElementById('3d-model-upload').classList.remove('hidden');
                } else {
                    document.getElementById('3d-model-upload').classList.add('hidden');
                }
            });
              // Initialize Mapbox
                mapboxgl.accessToken = 'pk.eyJ1Ijoia3Jvc3NzdWJhcm5hIiwiYSI6ImNtN3NteGp5ajE2dWgyanNibHNxc2o5YXcifQ.GSxJY20oRcqu6qnF154OEg'; // Replace with your Mapbox token
             const map = new mapboxgl.Map({
            container: 'map', // The ID of the HTML element where the map will be displayed
            style: 'mapbox://styles/mapbox/streets-v11',
            center: [85.3240, 27.7172], // Initial map center coordinates (Kathmandu)
            zoom: 12 // Initial zoom level
        });

        let marker = new mapboxgl.Marker({ draggable: true })
            .setLngLat([85.3240, 27.7172]) // Initial marker position
            .addTo(map);

        // Update the coordinates in input fields when the marker is dragged
        marker.on('dragend', function() {
            const lngLat = marker.getLngLat();
            document.getElementById('Latitude').value = lngLat.lat;
            document.getElementById('Longitude').value = lngLat.lng;
        });

        // Listen for click events to pick a location
        map.on('click', function(e) {
            // Get the clicked coordinates
            const lngLat = e.lngLat;

            // Move the marker to the clicked position
            marker.setLngLat(lngLat);

            // Update the input fields with the clicked location's coordinates
            document.getElementById('Latitude').value = lngLat.lat;
            document.getElementById('Longitude').value = lngLat.lng;
        });
        const propertyTypeSelect = document.getElementById('PropertyType');
        const propertyFields = document.getElementById('property-specific-fields');
        const fileInput = document.getElementById('photo');
        const imagePreview = document.getElementById('image-preview');

        // Handle property type change
        propertyTypeSelect.addEventListener('change', function () {
            const propertyType = this.value;
            propertyFields.innerHTML = ''; // Clear previous fields

            if (propertyType === 'House') {
                propertyFields.innerHTML = `
                    <div>
                        <label for="Bedrooms" class="block text-sm font-medium text-gray-700">Number of Bedrooms</label>
                        <input id="Bedrooms" name="Bedrooms" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter number of bedrooms">
                    </div>
                    <div>
                        <label for="Kitchens" class="block text-sm font-medium text-gray-700">Number of Kitchens</label>
                        <input id="Kitchens" name="Kitchens" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter number of kitchens">
                    </div>
                    <div>
                        <label for="SittingRooms" class="block text-sm font-medium text-gray-700">Number of Sitting Rooms</label>
                        <input id="SittingRooms" name="SittingRooms" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter number of sitting rooms">
                    </div>
                    <div>
                        <label for="Bathrooms" class="block text-sm font-medium text-gray-700">Number of Bathrooms</label>
                        <input id="Bathrooms" name="Bathrooms" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter number of bathrooms">
                    </div>
                    <div>
                        <label for="Floors" class="block text-sm font-medium text-gray-700">Number of Floors</label>
                        <input id="Floors" name="Floors" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter number of floors">
                    </div>
                    <div>
                        <label for="LandArea" class="block text-sm font-medium text-gray-700">Land Area</label>
                        <input id="LandArea" name="LandArea" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter land area">
                    </div>
                    <div>
                        <label for="BuildupArea" class="block text-sm font-medium text-gray-700">Buildup Area</label>
                        <input id="BuildupArea" name="BuildupArea" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter buildup area">
                    </div>
                    <div>
                        <label for="BuiltYear" class="block text-sm font-medium text-gray-700">Built Year</label>
                        <input id="BuiltYear" name="BuiltYear" type="date" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    <div>
                        <label for="FacingDirection" class="block text-sm font-medium text-gray-700">Facing Direction</label>
                        <select id="FacingDirection" name="FacingDirection" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                           <option value="East">East</option>
                           <option value="West">West</option>
                           <option value="North">North</option>
                           <option value="South">South</option>
                        </select>
                    </div>

                `;
            } else if (propertyType === 'Apartment') {
                propertyFields.innerHTML = `
                    <div>
                        <label for="Rooms" class="block text-sm font-medium text-gray-700">Number of Rooms</label>
                        <input id="Rooms" name="Rooms" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter number of rooms">
                    </div>
                    <div>
                        <label for="Kitchens" class="block text-sm font-medium text-gray-700">Number of Kitchens</label>
                        <input id="Kitchens" name="Kitchens" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter number of kitchens">
                    </div>
                    <div>
                        <label for="SittingRooms" class="block text-sm font-medium text-gray-700">Number of Sitting Rooms</label>
                        <input id="SittingRooms" name="SittingRooms" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter number of sitting rooms">
                    </div>
                    <div>
                        <label for="Bathrooms" class="block text-sm font-medium text-gray-700">Number of Bathrooms</label>
                        <input id="Bathrooms" name="Bathrooms" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter number of bathrooms">
                    </div>
                    <div>
                        <label for="RoomSize" class="block text-sm font-medium text-gray-700">Room Size</label>
                        <input id="RoomSize" name="RoomSize" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter room size">
                    </div>
                    <div>
                        <label for="BuiltYear" class="block text-sm font-medium text-gray-700">Built Year</label>
                        <input id="BuiltYear" name="BuiltYear" type="date" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    </div>
                `;
            } else if (propertyType === 'Land') {
                propertyFields.innerHTML = `
                    <div>
                        <label for="LandArea" class="block text-sm font-medium text-gray-700">Land Area</label>
                        <input id="LandArea" name="LandArea" type="number" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter land area">
                    </div>
                    <div>
                        <label for="LandType" class="block text-sm font-medium text-gray-700">Land Type</label>
                        <select id="LandType" name="LandType" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                            <option value="Agricultural">Agricultural</option>
                            <option value="Industrial">Industrial</option>
                            <option value="Residential">Residential</option>
                            <option value="Commercial">Commercial</option>
                        </select>
                    </div>
                    <div>
                        <label for="SoilQuality" class="block text-sm font-medium text-gray-700">Soil Quality</label>
                        <select id="SoilQuality" name="SoilQuality" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                            <option value="Loamy">Loamy</option>
                            <option value="Sandy">Sandy</option>
                            <option value="Rocky">Rocky</option>
                            <option value="Fertile">Fertile</option>
                        </select>
                    </div>
                `;
            }
        });

        // Handle file input change for image preview
        fileInput.addEventListener('change', function () {
            imagePreview.innerHTML = ''; // Clear previous previews

            if (this.files && this.files.length > 0) {
                for (const file of this.files) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.classList.add('w-full', 'h-24', 'object-cover', 'rounded-lg');
                        imagePreview.appendChild(img);
                    };
                    reader.readAsDataURL(file);
                }
            }
        });
    });
</script>
    </body>
    </html>
