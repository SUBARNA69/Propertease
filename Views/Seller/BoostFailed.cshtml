@{
    ViewData["Title"] = "Boost Failed";
}

<h2>Boost Failed</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        <strong>Reason:</strong> @ViewBag.ErrorMessage
    </div>
}

<a href="@Url.Action("ConfirmBoost", "Seller")" class="btn btn-primary">Try Again</a>
