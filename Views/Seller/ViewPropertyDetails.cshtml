@model Propertease.Models.Properties

<div class="container mx-auto p-6">

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            @if (!string.IsNullOrEmpty(Model.Photo))
            {
                <img src="~/Images/@Model.Photo" alt="@Model.Title" class="w-full h-auto rounded-lg" />
            }
            else
            {
                <div class="w-full h-64 bg-gray-300 rounded-lg"></div>
            }
        </div>
        <div>
            <p><strong>Price:</strong> ₹@Model.Price.ToString("N0")</p>
            <p><strong>City:</strong> @Model.City</p>
            <p><strong>District:</strong> @Model.District</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p>
                <strong>Status:</strong>
                <span class="px-2 py-1 rounded-lg text-sm font-medium
                    @(Model.Status == "Pending" ? "bg-yellow-100 text-yellow-700" :
                    Model.Status == "Approved" ? "bg-green-100 text-green-700" :
                    "bg-red-100 text-red-700")">
                    @Model.Status
                </span>
            </p>
        </div>
    </div>

    <div class="mt-6 flex space-x-4">
        <a href="/Seller/EditProperty/@Model.Id" class="px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600">Edit</a>
        <form method="post" action="/Seller/Delete/@Model.Id" onsubmit="return confirm('Are you sure you want to delete this property?');">
            <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600">Delete</button>
        </form>
        <a href="/Seller/Listings" class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">Back to Listings</a>
    </div>
</div>
