@model PROPERTEASE.Models.BoostedProperty

@{
    ViewData["Title"] = "Boost Confirmation";
}

<div class="max-w-4xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
    <div class="text-center mb-6">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
        </div>
        <h2 class="text-2xl font-semibold text-gray-800">Boost Successful!</h2>
        <p class="text-gray-600 mt-2">Your property has been boosted and will be featured on the home page.</p>
    </div>

    <div class="bg-gray-50 p-6 rounded-lg shadow-sm mb-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Boost Details</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <p class="text-gray-600">Property: <span class="font-semibold">@Model.Property.Title</span></p>
                <p class="text-gray-600">Duration: <span class="font-semibold">@Model.Hours hours</span></p>
                <p class="text-gray-600">Target Audience: <span class="font-semibold">@Model.PeopleToReach people</span></p>
            </div>
            <div>
                <p class="text-gray-600">Start Time: <span class="font-semibold">@Model.StartTime.ToString("MMM dd, yyyy HH:mm")</span></p>
                <p class="text-gray-600">End Time: <span class="font-semibold">@Model.EndTime.ToString("MMM dd, yyyy HH:mm")</span></p>
                <p class="text-gray-600">Total Price: <span class="font-semibold text-blue-600">Rs. @Model.Price</span></p>
            </div>
        </div>
    </div>

    <div class="flex justify-center gap-4">
        <a asp-controller="Seller" asp-action="Index" class="px-6 py-3 bg-gray-200 text-gray-800 font-semibold rounded-lg hover:bg-gray-300 transition duration-300">
            Back to Dashboard
        </a>
        <a asp-controller="Seller" asp-action="ViewPropertyDetails" asp-route-id="@Model.PropertyId" class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition duration-300">
            View Property
        </a>
    </div>
</div>