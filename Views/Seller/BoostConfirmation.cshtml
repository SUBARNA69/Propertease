@model PROPERTEASE.Models.BoostedProperty

@{
    ViewData["Title"] = "Boost Confirmation";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Boost Confirmation</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Boost Details</h5>
                    <div class="mb-3">
                        <strong>Property:</strong> @Model.Property.Title
                    </div>
                    <div class="mb-3">
                        <strong>Boosted by:</strong> @Model.FullName
                    </div>
                    <div class="mb-3">
                        <strong>Phone:</strong> @Model.PhoneNumber
                    </div>
                    <div class="mb-3">
                        <strong>Boost Duration:</strong> @Model.Hours hours
                    </div>
                    <div class="mb-3">
                        <strong>Start Time:</strong> @Model.StartTime.ToString("dd/MM/yyyy HH:mm")
                    </div>
                    <div class="mb-3">
                        <strong>End Time:</strong> @Model.EndTime.ToString("dd/MM/yyyy HH:mm")
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title">Payment Information</h5>
                            <div class="mb-3">
                                <strong>Amount Due:</strong> Rs. @Model.Price
                            </div>
                            <div class="mb-3">
                                <strong>Status:</strong>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Payment Required</span>
                                }
                            </div>
                            @if (!Model.IsActive)
                            {
                                <div class="mt-4">
                                    <a href="@Url.Action("ProcessPayment", "Payment", new { boostedPropertyId = Model.Id })"
                                       class="btn btn-success btn-lg">
                                        Proceed to Payment
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>