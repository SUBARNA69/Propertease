@{
    Layout = "Null";
}
@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<!-- Include Flowbite CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css" rel="stylesheet" />

<div class="max-w-lg mx-auto p-6 bg-white rounded-lg shadow-md text-center">
    <!-- Success Icon -->
    <div class="mx-auto w-16 h-16 flex items-center justify-center bg-green-100 rounded-full mb-4">
        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
    </div>

    <!-- Title -->
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Password Reset Successful</h2>

    <!-- Message -->
    <p class="text-gray-600 mb-6">
        Your password has been reset successfully. You can now log in with your new password.
    </p>

    <!-- Login Button -->
    <a asp-action="Login"
       class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 transition duration-200">
        Log In
    </a>
</div>

<!-- Include Flowbite JS (optional for interactive components) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js"></script>