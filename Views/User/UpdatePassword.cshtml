@model Propertease.Models.PasswordChangeModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Update Password";
}

<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 sm:max-w-xl sm:mx-auto">
        <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
            <div class="max-w-md mx-auto">
                <div class="divide-y divide-gray-200">
                    <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
                        <h2 class="text-2xl font-bold mb-8 text-center text-gray-800">Change Password</h2>

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                                <span class="block sm:inline">@TempData["SuccessMessage"]</span>
                            </div>
                        }

                        <form asp-action="UpdatePassword" asp-controller="User" method="post">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

                            <div class="mb-6">
                                <label asp-for="CurrentPassword" class="block text-sm font-medium text-gray-700 mb-2"></label>
                                <input asp-for="CurrentPassword" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" />
                                <span asp-validation-for="CurrentPassword" class="text-red-500 text-sm"></span>
                            </div>

                            <div class="mb-6">
                                <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 mb-2"></label>
                                <input asp-for="NewPassword" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" />
                                <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
                            </div>

                            <div class="mb-6">
                                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2"></label>
                                <input asp-for="ConfirmPassword" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" />
                                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
                            </div>

                            <div class="flex items-center justify-between mt-8">
                                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                                    Change Password
                                </button>
                                <a asp-action="Profile" asp-controller="User" class="text-blue-500 hover:text-blue-800">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}