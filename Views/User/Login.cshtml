@model AddUser
@{
    ViewData["Title"] = "Login";
}
<style>
    .top {
        margin-top: 100px;
    }
</style>

<div class="flex items-center justify-center min-h-screen mt-30">
    <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md dark:bg-gray-800">
        <h2 class="text-2xl font-bold text-center text-gray-800 dark:text-white">Login</h2>
        <p class="mt-2 text-sm text-center text-gray-600 dark:text-gray-400">
            Welcome back! Please enter your credentials to log in.
        </p>

        <form asp-action="Login" asp-controller="User" method="post" class="mt-6">
            <div class="mb-4">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                <input asp-for="Email"
                       class="w-full px-4 py-2 mt-1 text-gray-900 bg-gray-100 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                       placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
                <input asp-for="Password"
                       type="password"
                       class="w-full px-4 py-2 mt-1 text-gray-900 bg-gray-100 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                       placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-sm text-red-500"></span>
            </div>

            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center">
                    <input type="checkbox" id="rememberMe" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-400">
                    <label for="rememberMe" class="ml-2 text-sm text-gray-600 dark:text-gray-300">Remember me</label>
                </div>
                <a href="#" class="text-sm text-blue-600 hover:underline dark:text-blue-400">Forgot Password?</a>
            </div>

            <button type="submit" class="w-full px-4 py-2 text-white bg-blue-600 rounded-lg shadow-sm hover:bg-blue-700 focus:ring-4 focus:ring-blue-500 focus:outline-none dark:bg-blue-500 dark:hover:bg-blue-600">
                Log In
            </button>
        </form>

        <p class="mt-4 text-sm text-center text-gray-600 dark:text-gray-400">
            Don't have an account?
            <a asp-action="Register" asp-controller="User" class="text-blue-600 hover:underline dark:text-blue-400">Sign Up</a>
        </p>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
}
