@model AddUser
@{
    Layout = "_StaticLayoutL";
}


@{
    ViewData["Title"] = "Login";
}

<div class="flex items-center justify-center min-h-screen ">
    <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-lg dark:bg-gray-800">
        <!-- Login Header -->
        <div class="text-center">
            <svg class="mx-auto w-12 h-12 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.5L2 9.5V21h20V9.5l-10-7zM4 10.3V20H3V9.5l9-6.2 9 6.2v10.5H4V10.3z" />
                <path d="M4 20v.5H20V20H4z" />
            </svg>
            <h2 class="mt-4 text-2xl font-bold text-gray-900 dark:text-white">Login</h2>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                Welcome back! Please enter your credentials to log in.
            </p>
        </div>

        <!-- Login Form -->
        <form asp-action="Login" asp-controller="User" method="post" class="mt-6 space-y-4">
            @Html.AntiForgeryToken()

            <!-- Validation Summary -->
            <div asp-validation-summary="All" class="text-red-500 text-sm"></div>

            <!-- Email Field -->
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                <input asp-for="Email" type="email"
                       class="mt-1 block w-full px-4 py-2 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                       placeholder="Enter your email" required />
                <span asp-validation-for="Email" class="text-sm text-red-500"></span>
            </div>

            <!-- Password Field -->
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
                <input asp-for="Password" type="password"
                       class="mt-1 block w-full px-4 py-2 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                       placeholder="Enter your password" required />
                <span asp-validation-for="Password" class="text-sm text-red-500"></span>
            </div>

            <!-- Remember Me & Forgot Password -->
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input id="rememberMe" type="checkbox"
                           class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-400">
                    <label for="rememberMe" class="ml-2 text-sm text-gray-600 dark:text-gray-300">Remember me</label>
                </div>
                <a href="#" class="text-sm text-blue-600 hover:underline dark:text-blue-400">Forgot Password?</a>
            </div>

            <!-- Submit Button -->
            <div>
                <button type="submit"
                        class="w-full px-4 py-2 text-white bg-blue-600 rounded-lg shadow-sm hover:bg-blue-700 focus:ring-4 focus:ring-blue-500 focus:outline-none dark:bg-blue-500 dark:hover:bg-blue-600">
                    Log In
                </button>
            </div>
        </form>

        <!-- Footer -->
        <p class="mt-4 text-sm text-center text-gray-600 dark:text-gray-400">
            Don't have an account?
            <a asp-action="Register" asp-controller="User" class="text-blue-600 hover:underline dark:text-blue-400">Sign Up</a>
        </p>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
