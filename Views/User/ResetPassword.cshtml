@model ResetPasswordViewModel
@{
    Layout = "Null";
}
@{
    ViewData["Title"] = "Reset Password";
}

<!-- Include Flowbite CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css" rel="stylesheet" />

<div class="max-w-lg mx-auto p-6 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Reset Password</h2>

    <form asp-action="ResetPassword" method="post" class="space-y-6">
        <!-- Validation Summary -->
        <div asp-validation-summary="All" class="text-red-500 text-sm"></div>

        <!-- Hidden Fields -->
        <input asp-for="Email" type="hidden" />
        <input asp-for="Token" type="hidden" />

        <!-- Password Field -->
        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-2">New Password</label>
            <input asp-for="Password"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200"
                   placeholder="Enter your new password" />
            <span asp-validation-for="Password" class="text-red-500 text-sm mt-1"></span>
        </div>

        <!-- Confirm Password Field -->
        <div>
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2">Confirm New Password</label>
            <input asp-for="ConfirmPassword"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200"
                   placeholder="Confirm your new password" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm mt-1"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit"
                class="w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 transition duration-200">
            Reset Password
        </button>
    </form>
</div>

<!-- Include Flowbite JS (optional for interactive components) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js"></script>