@model Propertease.Models.User

@{
    ViewData["Title"] = "User Profile";
}

<div class="max-w-lg mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
    <h2 class="text-2xl font-bold mb-4">User Profile</h2>

    <!-- Profile Image Display -->
    <div class="flex justify-center mb-6">
        <div class="w-24 h-24 rounded-full overflow-hidden border-2 border-gray-300">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="~/Images/@Model.Image" alt="Profile Image" class="w-full h-full object-cover" />
            }
            else
            {
                <img src="https://via.placeholder.com/150" alt="Default Profile Image" class="w-full h-full object-cover" />
            }
        </div>
    </div>

    <!-- User Information -->
    <div class="space-y-2">
        <div class="text-lg font-medium">Name: @Model.FullName</div>
        <div class="text-lg font-medium">Email: @Model.Email</div>
        <div class="text-lg font-medium">Contact Number: @Model.ContactNumber</div>
        <div class="text-lg font-medium">Address: @Model.Address</div>
    </div>

    <!-- Image Upload Form -->
    <form asp-action="SaveImage" asp-controller="User" method="post" enctype="multipart/form-data" class="mt-6">
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">Upload Image</label>
            <input type="file" name="photo" class="block w-full text-sm text-gray-900 border rounded-lg cursor-pointer focus:outline-none" />
        </div>

        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Save Image</button>
        <button type="button" id="editProfileButton" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">Edit Profile</button>
    </form>

    <!-- Edit Profile Form -->
    <div id="editProfileForm" class="hidden mt-6 bg-gray-100 p-4 rounded-lg">
        <form asp-action="Profile" asp-controller="User" method="post">
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Name</label>
                <input type="text" name="FullName" value="@Model.FullName" class="block w-full text-sm text-gray-900 border rounded-lg focus:outline-none p-2" />
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" name="Email" value="@Model.Email" class="block w-full text-sm text-gray-900 border rounded-lg focus:outline-none p-2" />
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Contact Number</label>
                <input type="text" name="ContactNumber" value="@Model.ContactNumber" class="block w-full text-sm text-gray-900 border rounded-lg focus:outline-none p-2" />
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Address</label>
                <input type="text" name="Address" value="@Model.Address" class="block w-full text-sm text-gray-900 border rounded-lg focus:outline-none p-2" />
            </div>
            <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Save Changes</button>
            <button type="button" id="cancelEditButton" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">Cancel</button>
        </form>
    </div>
</div>

<script>
    document.getElementById('editProfileButton').addEventListener('click', function () {
        document.getElementById('editProfileForm').classList.remove('hidden');
    });

    document.getElementById('cancelEditButton').addEventListener('click', function () {
        document.getElementById('editProfileForm').classList.add('hidden');
    });
</script>
