    <!-- CTA Section -->
    <div class="bg-blue-600 rounded-2xl p-8 text-center">
        <h2 class="text-2xl font-bold text-white mb-4">Ready to find your dream property?</h2>
        <p class="text-blue-100 mb-6 max-w-2xl mx-auto">
            Join thousands of satisfied clients who have found their perfect home through Peopertease.
