@model Propertease.Models.PropertyDetailsViewModel
@{
    ViewData["Title"] = "3D Model Viewer - " + Model.Title;
}

<div class="container mt-4">
    <h2>@Model.Title - 3D Model Viewer</h2>

    <div id="model-container"
         data-property-id="@Model.Id"
         data-model-filename="@Model.ThreeDModel"
         style="width: 100%; height: 600px; position: relative;">
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-primary">
            Back to Property Details
        </a>
    </div>
</div>

@section Scripts {
    <script type="module" src="/js/3d-model-viewer.js"></script>
}