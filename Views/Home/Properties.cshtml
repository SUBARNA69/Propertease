@{
    ViewData["Title"] = "Properties";
}
@model IEnumerable<Properties>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Properties</title>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-6">
        <h1 class="text-3xl font-bold mb-6">Available Properties</h1>

        <!-- Sidebar for Filters -->
        <div class="flex">
            <aside class="w-1/4 bg-white shadow p-4">
                <h2 class="text-xl font-semibold mb-4">Filters</h2>
                <form method="get" action="/Home/Properties">
                    <label for="propertyType" class="block text-sm font-medium text-gray-700">Property Type</label>
                    <select id="propertyType" name="propertyType" class="mt-1 block w-full border-gray-300 rounded-md">
                        <option value="">All</option>
                        <option value="Apartment">Apartment</option>
                        <option value="House">House</option>
                        <option value="Land">Land</option>
                    </select>

                    <label for="district" class="block text-sm font-medium text-gray-700 mt-4">District</label>
                    <input type="text" id="district" name="district" class="mt-1 block w-full border-gray-300 rounded-md" placeholder="Enter district">

                    <button type="submit" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                        Apply Filters
                    </button>
                </form>
            </aside>

            <!-- Properties List -->
            <main class="w-3/4 ml-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @if (Model.Any())
                {
                    @foreach (var property in Model)
                    {
                        <div class="bg-white rounded-lg shadow overflow-hidden">
                            @if (property.PropertyImages != null && property.PropertyImages.Any())
                            {
                                <img src="~/Images/@property.PropertyImages.First().Photo" alt="@property.Title" class="w-full h-48 object-cover rounded-lg">
                            }
                            else
                            {
                                <div class="w-full h-48 bg-gray-200 flex items-center justify-center rounded-lg">
                                    <span class="text-gray-500">No Image Available</span>
                                </div>
                            }                         
                            <div class="p-4">
                                <h3 class="text-lg font-bold text-gray-800">@property.Title</h3>
                                <p class="text-gray-600 mt-2">@property.Description</p>
                                <p class="text-gray-800 mt-4 font-semibold">Price: @property.Price.ToString("C")</p>
                                <p class="text-sm text-gray-500 mt-1">Location: @property.City, @property.District</p>
                                <a href="/Property/Details/@property.Id" class="block mt-4 bg-blue-500 text-white text-center py-2 rounded hover:bg-blue-600">
                                    View Details
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-gray-600 text-center col-span-full">No approved properties available at the moment.</p>
                }
            </main>
        </div>
    </div>
</body>
</html>
