@model Propertease.Models.ForumPost

@{
    ViewData["Title"] = "Forum";
}

<div class="max-w-2xl mx-auto p-4">
    <h1 class="text-2xl font-bold mb-6">Create a New Post</h1>
    <form asp-action="Forum" method="post" class="space-y-4">
        <!-- Display validation summary -->
        <div asp-validation-summary="All" class="text-red-500"></div>

        <!-- Title Input -->
        <div>
            <label asp-for="Title" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Title" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Enter title" />
            <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
        </div>

        <!-- Content Textarea -->
        <div>
            <label asp-for="Content" class="block text-sm font-medium text-gray-700"></label>
            <textarea asp-for="Content" rows="4" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Enter your content"></textarea>
            <span asp-validation-for="Content" class="text-red-500 text-sm"></span>
        </div>

        <!-- Submit Button -->
        <div>
            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Create Post
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}