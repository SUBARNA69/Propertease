@model Propertease.Models.SellerRatingViewModel

@{
    ViewData["Title"] = "Rate Seller";
}

<div class="max-w-2xl mx-auto bg-white rounded-lg shadow-lg overflow-hidden p-6 my-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Rate Your Experience</h1>

    <div class="mb-6">
        <p class="text-gray-600">You're rating <span class="font-semibold">@Model.SellerName</span> for property:</p>
        <p class="text-lg font-medium text-gray-800">@Model.PropertyTitle</p>
    </div>

    <form asp-action="RateSeller" method="post">
        <input type="hidden" asp-for="PropertyId" />
        <input type="hidden" asp-for="SellerId" />
        <input type="hidden" asp-for="PropertyTitle" />
        <input type="hidden" asp-for="SellerName" />
        <input type="hidden" asp-for="ViewingRequestId" />

        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-3">
                How would you rate your experience with this seller?
            </label>

            <div class="flex items-center space-x-1" id="star-rating">
                <input type="hidden" asp-for="Rating" id="rating-value" />

                <button type="button" class="star-btn text-gray-300 hover:text-yellow-400 focus:outline-none" data-value="1">
