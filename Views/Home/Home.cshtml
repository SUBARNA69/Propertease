@{
    ViewData["Title"] = "Home";
}
@model IEnumerable<Properties>
<body>

    <!-- Hero Section with Search -->
    <section class="bg-gray-200 py-20">
        <div class="max-w-screen-xl mx-auto px-4">
            <form class="max-w-2xl mx-auto">
                <div class="flex">
                    <div class="relative w-full">
                        <input type="search" class="block p-4 w-full text-sm text-gray-900 border border-gray-300 rounded-lg bg-white focus:ring-blue-500 focus:border-blue-500" placeholder="Location..." required>
                        <button type="submit" class="absolute right-2.5 bottom-2.5 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="py-12">
        <div class="max-w-screen-xl mx-auto px-4">
            <h2 class="text-2xl font-bold mb-8">Browse by Category</h2>
            <div class="grid md:grid-cols-3 gap-8">
                <!-- Homes Category -->
                <a asp-action="Homes" asp-controller="Home">
                    <div class="bg-gray-100 p-6 rounded-lg">
                        <div class="flex justify-center mb-4">
                            <svg class="w-12 h-12 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-2 text-center">Homes</h3>
                        <p class="text-gray-600 text-center">Find your perfect home from our  collection</p>
                    </div>
                </a>

               
                <!-- Land Category -->
                <a asp-action="Lands" asp-controller="Home">
                    <div class="bg-gray-100 p-6 rounded-lg">
                        <div class="flex justify-center mb-4">
                            <svg class="w-12 h-12 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-2 text-center">Land</h3>
                        <p class="text-gray-600 text-center">Explore available plots and land opportunities</p>
                    </div>
                </a>
               

                <!-- Apartments Category -->
                <a asp-action="Apartments" asp-controller="Home">
                    <div class="bg-gray-100 p-6 rounded-lg">
                        <div class="flex justify-center mb-4">
                            <svg class="w-12 h-12 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-2 text-center">Apartments</h3>
                        <p class="text-gray-600 text-center">Discover modern apartments in prime locations</p>
                    </div>
                </a>
              
            </div>
        </div>
    </section>

    <!-- Featured Properties Section -->
    <section class="py-12 bg-gray-50">
        <div class="max-w-screen-xl mx-auto px-4">
            <h2 class="text-2xl font-bold mb-8">Featured Properties</h2>
            <div class="grid grid-cols-3 gap-4">
                @foreach (var property in Model)
                {
                    <div class="border rounded-lg shadow-lg p-4">
                        @if (property.PropertyImages != null && property.PropertyImages.Any())
                        {
                            <img src="~/Images/@property.PropertyImages.First().Photo" alt="@property.Title" class="w-full h-48 object-cover rounded-lg">
                        }
                        else
                        {
                            <div class="w-full h-48 bg-gray-200 flex items-center justify-center rounded-lg">
                                <span class="text-gray-500">No Image Available</span>
                            </div>
                        }
                        <h2 class="text-xl font-bold mt-2">@property.Title</h2>
                        <p class="text-gray-600">@property.District, @property.City </p>
                        <p class="text-green-600 font-semibold">Rs. @property.Price</p>
                        <button class="mt-2 bg-blue-500 text-white px-4 py-2 rounded">View Details</button>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Best for You Section -->
    <section class="py-12">
        <div class="max-w-screen-xl mx-auto px-4">
            <h2 class="text-2xl font-bold mb-8">Best for You</h2>
            <div class="grid md:grid-cols-4 gap-6">
                <!-- Property 1 -->
                @foreach (var property in Model)
                {
                    <div class="border rounded-lg shadow-lg p-4">
                        <img src="~/Images/@property.PropertyImages.First().Photo" alt="@property.Title" class="w-full h-48 object-cover rounded-lg">
                        <h2 class="text-xl font-bold mt-2">@property.Title</h2>
                        <p class="text-gray-600">@property.District, @property.City </p>
                        <p class="text-green-600 font-semibold">Rs. @property.Price</p>
                        <button class="mt-2 bg-blue-500 text-white px-4 py-2 rounded">View Details</button>
                    </div>
                }
                
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
        <div class="max-w-screen-xl mx-auto px-4">
            <div class="grid md:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-lg font-semibold mb-4">RealEstate</h3>
                    <p class="text-gray-400">Find your dream property with our expert guidance and comprehensive listings.</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white">Properties</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Contact</h3>
                    <ul class="space-y-2">
                        <li class="text-gray-400">+1 (555) 123-4567</li>
                        <li class="text-gray-400">info@realestate.com</li>
                        <li class="text-gray-400">123 Main St, New York, NY</li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Follow Us</h3>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-white">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
