<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize Mapbox
        mapboxgl.accessToken = 'pk.eyJ1Ijoia3Jvc3NzdWJhcm5hIiwiYSI6ImNtN3NteGp5ajE2dWgyanNibHNxc2o5YXcifQ.GSxJY20oRcqu6qnF154OEg';
        const map = new mapboxgl.Map({
            container: 'map',
            style: 'mapbox://styles/mapbox/streets-v12',
            center: [80.7718, 7.8731], // Center on Sri Lanka
            zoom: 7
        });

        // Add navigation controls
        map.addControl(new mapboxgl.NavigationControl());

        // Add property markers to the map
        map.on('load', function() {
            // Get all property cards
            const properties = document.querySelectorAll('.property-card');

            // Add markers for each property
            properties.forEach(property => {
                // Get the actual coordinates from the data attributes
                const lat = parseFloat(property.dataset.latitude);
                const lng = parseFloat(property.dataset.longitude);

                // Only add markers for properties with valid coordinates
                if (lat && lng && !isNaN(lat) && !isNaN(lng)) {
                    const title = property.querySelector('.text-xl.font-bold').textContent;
                    const price = property.querySelector('.text-2xl.font-bold').textContent;
                    const location = property.querySelector('.flex.items-center.text-gray-500 span').textContent;

                    // Create custom HTML element for the marker
                    const el = document.createElement('div');
                    el.className = 'custom-marker';

                    // Create price label that appears above the marker
                    const priceLabel = document.createElement('div');
                    priceLabel.className = 'price-label';
                    priceLabel.textContent = price;

                    // Create marker icon
                    const markerIcon = document.createElement('div');
                    markerIcon.className = 'marker-icon';

                    // Append elements
                    el.appendChild(priceLabel);
                    el.appendChild(markerIcon);

                    // Create a marker with the custom HTML element
                    const marker = new mapboxgl.Marker(el)
                        .setLngLat([lng, lat])
                        .setPopup(new mapboxgl.Popup({ offset: 25 })
                            .setHTML(`
                                <h3 class="font-bold text-sm">${title}</h3>
                                <p class="text-sm">${location}</p>
                                <p class="text-sm font-semibold text-sky-600">${price}</p>
                            `))
                        .addTo(map);
                }
            });

            // Adjust the map bounds to fit all markers if there are valid properties
            const validProperties = Array.from(properties).filter(p => {
                const lat = parseFloat(p.dataset.latitude);
                const lng = parseFloat(p.dataset.longitude);
                return lat && lng && !isNaN(lat) && !isNaN(lng);
            });

            if (validProperties.length > 0) {
                const bounds = new mapboxgl.LngLatBounds();
                validProperties.forEach(p => {
                    bounds.extend([
                        parseFloat(p.dataset.longitude),
                        parseFloat(p.dataset.latitude)
                    ]);
                });
                map.fitBounds(bounds, { padding: 50 });
            }
        });

        // Handle property type selection for search
        const propertyTypeSelect = document.getElementById('property-type');
        propertyTypeSelect.addEventListener('change', function() {
            const selectedType = this.value;
            if (selectedType === 'house') {
                window.location.href = '/Home/Homes';
            } else if (selectedType === 'apartment') {
                window.location.href = '/Home/Apartments';
            } else if (selectedType === 'land') {
                window.location.href = '/Home/Lands';
            }
        });
    });
</script>