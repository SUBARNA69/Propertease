@{
    ViewData["Title"] = "Home";
}
@model IEnumerable<Properties>

<!-- Add Flowbite CSS in your _Layout.cshtml or here -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.css" rel="stylesheet">

<body class="bg-gray-50">
    <!-- Hero Section with Search -->
    <section class="relative bg-gradient-to-r from-cyan-600 to-blue-700 py-24">
        <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1560518883-ce09059eeffa')] bg-cover bg-center opacity-20"></div>
        <div class="max-w-screen-xl mx-auto px-4 relative z-10">
            <div class="text-center mb-10">
                <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-4">Find Your Dream Property</h1>
                <p class="text-xl text-white/90 max-w-2xl mx-auto">Discover the perfect place to call home with our extensive collection of properties</p>
            </div>

            <form class="max-w-2xl mx-auto">
                <div class="flex flex-col md:flex-row gap-4">
                    <div class="relative w-full">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                            <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                            </svg>
                        </div>
                        <input type="search" class="block p-4 pl-10 w-full text-sm text-gray-900 rounded-lg border-0 shadow-lg focus:ring-blue-500 focus:border-blue-500 transition-all duration-300" placeholder="Search by location, property type..." required>
                    </div>
                    <button type="submit" class="text-white bg-blue-800 hover:bg-blue-900 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-6 py-4 shadow-lg transition-all duration-300 hover:shadow-xl">Search</button>
                </div>
            </form>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="py-16">
        <div class="max-w-screen-xl mx-auto px-4">
            <h2 class="text-3xl font-bold mb-2 text-gray-800">Browse by Category</h2>
            <p class="text-gray-600 mb-10">Explore our diverse range of properties to find what suits you best</p>

            <div class="grid md:grid-cols-3 gap-8">
                <!-- Homes Category -->
                <a asp-action="Homes" asp-controller="Home" class="group">
                    <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 group-hover:bg-gradient-to-br group-hover:from-cyan-50 group-hover:to-blue-50 border border-gray-100">
                        <div class="flex justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                            <div class="p-4 bg-cyan-100 rounded-full text-cyan-600 group-hover:bg-cyan-200 transition-colors duration-300">
                                <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                                </svg>
                            </div>
                        </div>
                        <h3 class="text-xl font-bold mb-3 text-center text-gray-800 group-hover:text-cyan-700 transition-colors duration-300">Homes</h3>
                        <p class="text-gray-600 text-center">Find your perfect home from our extensive collection of houses</p>
                    </div>
                </a>

                <!-- Land Category -->
                <a asp-action="Lands" asp-controller="Home" class="group">
                    <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 group-hover:bg-gradient-to-br group-hover:from-cyan-50 group-hover:to-blue-50 border border-gray-100">
                        <div class="flex justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                            <div class="p-4 bg-blue-100 rounded-full text-blue-600 group-hover:bg-blue-200 transition-colors duration-300">
                                <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                        </div>
                        <h3 class="text-xl font-bold mb-3 text-center text-gray-800 group-hover:text-blue-700 transition-colors duration-300">Land</h3>
                        <p class="text-gray-600 text-center">Explore available plots and land opportunities for your future projects</p>
                    </div>
                </a>

                <!-- Apartments Category -->
                <a asp-action="Apartments" asp-controller="Home" class="group">
                    <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 group-hover:bg-gradient-to-br group-hover:from-cyan-50 group-hover:to-blue-50 border border-gray-100">
                        <div class="flex justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                            <div class="p-4 bg-teal-100 rounded-full text-teal-600 group-hover:bg-teal-200 transition-colors duration-300">
                                <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                                </svg>
                            </div>
                        </div>
                        <h3 class="text-xl font-bold mb-3 text-center text-gray-800 group-hover:text-teal-700 transition-colors duration-300">Apartments</h3>
                        <p class="text-gray-600 text-center">Discover modern apartments in prime locations for comfortable living</p>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!-- Featured Properties Section -->
    <section class="py-16 bg-gradient-to-b from-white to-gray-100">
        <div class="max-w-screen-xl mx-auto px-4">
            <div class="flex justify-between items-end mb-10">
                <div>
                    <h2 class="text-3xl font-bold mb-2 text-gray-800">Featured Properties</h2>
                    <p class="text-gray-600">Handpicked properties that might be perfect for you</p>
                </div>
                <a href="#" class="text-cyan-600 hover:text-cyan-800 font-medium flex items-center transition-colors duration-300">
                    View all
                    <svg class="w-5 h-5 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
            </div>

            <div class="grid md:grid-cols-3 gap-6">
                @foreach (var property in Model.Take(3))
                {
                    <div class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 group">
                        <div class="relative overflow-hidden">
                            @if (property.PropertyImages != null && property.PropertyImages.Any())
                            {
                                <img src="~/Images/@property.PropertyImages.First().Photo" alt="@property.Title" class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-500">
                            }
                            else
                            {
                                <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
                                    <span class="text-gray-500">No Image Available</span>
                                </div>
                            }
                            <div class="absolute top-4 right-4 bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                                Featured
                            </div>
                        </div>

                        <div class="p-6">
                            <div class="flex items-center mb-2">
                                <span class="bg-cyan-100 text-cyan-800 text-xs font-medium px-2.5 py-0.5 rounded-full">@property.PropertyType</span>
                                <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full ml-2">For Sale</span>
                            </div>

                            <h3 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-cyan-700 transition-colors duration-300">@property.Title</h3>

                            <div class="flex items-center text-gray-500 mb-4">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                                </svg>
                                <span>@property.District, @property.City</span>
                            </div>

                            <div class="flex justify-between items-center">
                                <span class="text-2xl font-bold text-cyan-700">Rs. @property.Price.ToString("N0")</span>
                                <a href="@Url.Action("Details", "Home", new { id = property.Id })" class="text-white bg-gradient-to-r from-cyan-600 to-blue-700 hover:from-cyan-700 hover:to-blue-800 font-medium rounded-lg text-sm px-4 py-2 transition-all duration-300">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Best for You Section -->
    <section class="py-16">
        <div class="max-w-screen-xl mx-auto px-4">
            <div class="flex justify-between items-end mb-10">
