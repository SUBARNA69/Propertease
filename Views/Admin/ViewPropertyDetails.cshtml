@model Propertease.Models.PropertyDetailsViewModel

@{
    ViewData["Title"] = "Property Details";
}

<div class="max-w-6xl mx-auto py-8 px-4">
    <!-- Property Image Section -->
    <div class="bg-gray-200 h-64 flex items-center justify-center mb-6 rounded-lg overflow-hidden">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/Images/@Model.ImageUrl" alt="Property Image" class="h-full w-auto object-cover" />
        }
        else
        {
            <span class="text-gray-500">No Image Available</span>
        }
    </div>

    <!-- Main Details Section -->
    <div class="grid grid-cols-3 gap-6">
        <!-- Property Details Card -->
        <div class="col-span-2 bg-white p-6 shadow-md rounded-lg">
            <h2 class="text-2xl font-bold mb-2">@Model.Title</h2>
            <p class="text-xl text-gray-600 font-semibold mb-4">$@string.Format("{0:n0}", Model.Price)</p>
            <p class="text-gray-700 mb-4">@Model.Description</p>

            <div class="grid grid-cols-2 gap-4 mb-6">
                <p><strong>Bedrooms:</strong> @Model.Bedrooms</p>
                <p><strong>Bathrooms:</strong> @Model.Bathrooms</p>
                <p><strong>Area:</strong> @Model.Area sq ft</p>
                <p><strong>Kitchens:</strong> @Model.Kitchens</p>
            </div>

            <div class="border-t pt-4 mt-4">
                <p><strong>Location:</strong> @Model.City, @Model.District, @Model.Province</p>
                <p><strong>Property Type:</strong> @Model.PropertyType</p>
            </div>
        </div>

        <!-- Seller Information Card -->
        <div class="bg-white p-6 shadow-md rounded-lg">
            <h3 class="text-xl font-bold mb-4">Seller Information</h3>
            <p><strong>Name:</strong> @Model.SellerName</p>
            <p><strong>Contact:</strong> @Model.SellerContact</p>
        </div>
    </div>

    <!-- Approve/Reject Buttons -->
    <div class="flex justify-center mt-8 space-x-4">
        <form style="display:inline;">
            <input type="hidden" name="id" value="@Model.Id" />
            <button asp-action="ApproveProperty" asp-controller="Admin" type="submit" class="bg-green-500 text-white px-2 py-1 rounded">Approve</button>
        </form>

        <!-- Reject Button -->
        <form action="/Admin/RejectProperty" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="bg-red-500 text-white px-2 py-1 rounded">Reject</button>
        </form>
    </div>

    <!-- Back to Properties -->
    <div class="mt-6 text-center">
        <a href="@Url.Action("AdminRequests", "Admin")" class="text-blue-500 hover:underline">&larr; Back to Properties</a>
    </div>
</div>
