@model IEnumerable<Properties>

<table class="table-auto w-full">
    <thead>
        <tr>
            <th class="text-left px-4 py-2">Image</th>
            <th class="text-left px-4 py-2">Title</th>
            <th class="text-left px-4 py-2">Price</th>
            <th class="text-left px-4 py-2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var property in Model)
        {
            <tr>
                <td class="px-4 py-2">
                    @if (property.PropertyImages != null && property.PropertyImages.Any())
                    {
                        <img src="~/Images/@property.PropertyImages.First().Photo" alt="@property.Title" class="w-full h-48 object-cover rounded-lg">
                    }
                    else
                    {
                        <div class="w-full h-48 bg-gray-200 flex items-center justify-center rounded-lg">
                            <span class="text-gray-500">No Image Available</span>
                        </div>
                    }
                </td>
                <td class="px-4 py-2">@property.Title</td>
                <td class="px-4 py-2">@property.Price</td>
                <td class="px-4 py-2">
                    <!-- View Details Button -->
                    <a href="/Admin/ViewPropertyDetails/@property.Id" class="bg-blue-500 text-white px-2 py-1 rounded">View Details</a>

                    <!-- Approve Button -->
                    <form action="/Admin/ApproveProperty" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@property.Id" />
                        <button type="submit" class="bg-green-500 text-white px-2 py-1 rounded">Approve</button>
                    </form>

                    <!-- Reject Button -->
                    <form action="/Admin/RejectProperty" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@property.Id" />
                        <button type="submit" class="bg-red-500 text-white px-2 py-1 rounded">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
